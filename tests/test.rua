-- walrus-operator
do
	local a = 20
	assert.eq(a, 20)
	local b = a := 5
	assert.eq(a, 5)
	assert.eq(b, 5)

	-- does it work in places the `exp` rule works without `explist` ?
	-- such as table and index of . and [] ?
	local t = {}
	t[a := 3] = 'foo'
	assert.eq(a, 3)
	assert.eq(t[3], 'foo')

	-- vanilla Lua has a syntax error
	-- oops, I guess you can't have index assign statements whose table expression is in parenthesis...
	--(t)[3] = 'bar' a=t
	--(a := t)[3] = 'bar'

	-- but as long as it's an expression you can assign just fine
	local tmp = (a := t)[3]
	assert.eq(tmp, 'foo')
	assert.eq(a, t)

	-- walrus-as-assign-stmt?
	local a
	a := 1
	assert.eq(a, 1)
end
do
	-- walrus explist
	local a,b = 3,4
	local c,d = a,b := 1,2
	assert.eq(a, 1)
	assert.eq(b, 2)
	assert.eq(c, 1)
	assert.eq(d, 2)

	-- multret for table assignment?
	local t = {}
	t.a, t.b = 5, 6
	t.c, t.d = t.a, t.b := 7, 8
	assert.eq(t.a, 7)
	assert.eq(t.b, 8)
	assert.eq(t.c, 7)
	assert.eq(t.d, 8)

	-- multret order?
	local a,b,c,d,e,f
	-- notice I don't allow walrus as assignment.  just use equals. same same really.
	--a,b := c,d := e,f := 2,3	-- syntax error
