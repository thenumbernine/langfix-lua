-- walrus-apply-to?
do
	local a = 0
	a +:= 1		-- walrus-to as stmt
	assert.eq(a, 1)
	assert.eq((a +:= 1), 2)	-- walrus-to as expr

	local a,b = 2,3
	a,b +:= 4,5
	assert.eq(a, 6)
	assert.eq(b, 8)

	-- assign-and-create-as-we-go
	local a
	local _ = (((a ??:= {}).x ??:= {}).y ??:= {}).z ??:= 10
